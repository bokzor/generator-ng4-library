{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "src",
    "test",
    "demo",
    "custom-typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
